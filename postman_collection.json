                  "pm.test(\"All tasks have pending status\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    jsonData.data.forEach(function(task) {",
                  "        pm.expect(task.status).to.eql(\"pending\");",
                  "    });",
                  "});"
